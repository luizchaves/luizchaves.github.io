---
import { twMerge } from 'tailwind-merge';

type Props = {
  href: string;
  class?: string;
};

const { href, class: className } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  class={twMerge(
    'flex flex-col md:flex-row justify-between gap-0.5 md:gap-4 p-2 -mx-2 rounded-md hover:bg-gray-100',
    className
  )}
>
  <slot />
</a>
