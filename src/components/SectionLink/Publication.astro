---
import BaseLink from '@/components/SectionLink/BaseLink.astro';

export type PublicationLink = {
  year: number;
  title: string;
  url: string;
};

const { year, title, url } = Astro.props as PublicationLink;
---

<BaseLink href={url}>
  <p>
    <span>{title}</span>,
    <span>{year}</span>
  </p>
</BaseLink>
