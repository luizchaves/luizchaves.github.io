---
import SectionItem from '@/components/SectionItem.astro';

interface Props {
  title: string;
  collection: {
    title: string;
    description?: string;
    homepage?: string;
  }[];
}

const { title, collection } = Astro.props as Props;
---

<div class="space-y-4">
  <h2 class="text-2xl font-semibold">{title}</h2>

  {
    collection[0].homepage ? (
      <nav>
        {collection.map((item) => (
          <SectionItem {...item} />
        ))}
      </nav>
    ) : (
      <div class="flex flex-wrap gap-4">
        {collection
          .sort((a, b) => a.title.localeCompare(b.title))
          .map((item) => (
            <p>{item.title}</p>
          ))}
      </div>
    )
  }
</div>
